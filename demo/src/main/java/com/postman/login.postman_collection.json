{
  "info": {
    "name": "Login API",
    "_postman_id": "b7a89e3d-login-collection",
    "description": "Colección para autenticación (login, logout)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"juan@test.com\",\n  \"password\": \"Password123!\"\n}"
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": "{{base_url}}/auth/logout"
      }
    }
  ]
}
